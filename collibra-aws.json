{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "eu-central-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "137112412989"
        ],
        "most_recent": true
      },
      "instance_type": "t2.xlarge",
      "ssh_username": "ec2-user",
      "ami_name": "collibra-dgc-551 {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./collibra-config.json",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "file",
      "source": "./dgc-linux-5.5.1-FINAL.sh",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "shell",
      "inline":[
        "cd /home/ec2-user",
        "sudo yum upgrade -y",
        "sudo yum install expect java-1.8.0-openjdk wget -y",
        "sudo adduser -rm  -s /bin/bash  collibra",
        "echo Download Collibra installer",
        "sudo chmod 755 dgc-linux-5.5.1-FINAL.sh",
        "sudo ./dgc-linux-5.5.1-FINAL.sh -- --config /home/ec2-user/collibra-config.json",
        "sudo rm dgc-linux-5.5.1-FINAL.sh"
      ]
    }
  ]
}